[Unit]
Description=Grid Trading Bot
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/gridbot
ExecStart=/opt/gridbot/.venv/bin/python /opt/gridbot/start_bot.py --no-confirm
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

# =============================================================================
# HYPERLIQUID GRID BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env with real keys to version control!
#
# For mainnet: https://api.hyperliquid.xyz
# For testnet: https://api.hyperliquid-testnet.xyz
# =============================================================================

# -----------------------------------------------------------------------------
# API ENDPOINT & DEX SELECTION
# -----------------------------------------------------------------------------
HL_BASE_URL=https://api.hyperliquid.xyz
# DEX venue: "xyz" for builder perps, "hl" for main Hyperliquid perps
HL_DEX=xyz

# -----------------------------------------------------------------------------
# TRADING PAIRS
# -----------------------------------------------------------------------------
# Comma-separated list of coins to trade
# Format: dex:SYMBOL (e.g., xyz:TSLA, xyz:NVDA)
HL_COINS=xyz:NVDA,xyz:ORCL

# -----------------------------------------------------------------------------
# AUTHENTICATION (Choose ONE method)
# -----------------------------------------------------------------------------
# Option 1: Full Private Key (has full wallet control)
# HL_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Option 2: Agent Key + User Address (recommended for bots)
# Generate agent key at: https://app.hyperliquid.xyz/settings
HL_AGENT_KEY=0xYOUR_AGENT_KEY_HERE
HL_USER_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# -----------------------------------------------------------------------------
# GRID PARAMETERS (Core Trading Settings)
# -----------------------------------------------------------------------------
# Total investment in USD across all grid levels (per coin unless overridden)
HL_INVESTMENT_USD=1000

# Leverage multiplier (e.g., 10 = 10x leverage)
HL_LEVERAGE=10

# Number of grid levels on each side (total orders = grids * 2)
HL_NUM_GRIDS=30

# Grid spacing as decimal (0.0006 = 0.06% between levels)
HL_GRID_SPACING_PCT=0.0006

# Maximum spacing (used during high volatility)
HL_GRID_SPACING_MAX_PCT=0.005

# Minimum order size in USD notional
HL_MIN_NOTIONAL_USD=10

# Grid center trailing threshold
HL_TRAILING_PCT=0.015

# -----------------------------------------------------------------------------
# TIMING & POLLING INTERVALS
# -----------------------------------------------------------------------------
HL_LOOP_INTERVAL_SEC=2.0
HL_RESYNC_POSITION_SEC=300
HL_REST_FILL_POLL_SEC=20
HL_FILL_RESCAN_MS=4000
HL_PNL_LOG_INTERVAL_SEC=60
HL_COALESCE_MS=50
HL_WS_STALE_AFTER_SEC=20
HL_WS_WATCH_INTERVAL_SEC=5
HL_DATA_HALT_SEC=120
HL_REST_MID_BACKOFF_SEC=5
HL_HTTP_TIMEOUT=2.0

# -----------------------------------------------------------------------------
# RISK LIMITS (CRITICAL!)
# -----------------------------------------------------------------------------
HL_MAX_POSITION_ABS=0
HL_MAX_SYMBOL_NOTIONAL=15000
HL_MAX_DRAWDOWN_PCT=0.08
HL_MAX_SKEW_RATIO=0.3
HL_MAX_UNREALIZED_DD_PCT=0.04
HL_DAILY_PNL_STOP=-250
HL_DAILY_PNL_TAKE=500
HL_FUNDING_BLEED_PCT=0.02
HL_STOP_LOSS_LOW=0.0
HL_STOP_LOSS_HIGH=999999

# -----------------------------------------------------------------------------
# VOLATILITY & TREND
# -----------------------------------------------------------------------------
HL_VOL_CIRCUIT_SIGMA=6.0
HL_ATR_LENGTH=10
HL_EWMA_ALPHA=0.15
HL_INIT_VOL_MULTIPLIER=0.5
HL_TREND_FAST_EMA=10
HL_TREND_SLOW_EMA=36
HL_SKEW_SOFT=0.18
HL_SKEW_HARD=0.35

# -----------------------------------------------------------------------------
# METRICS & ALERTING
# -----------------------------------------------------------------------------
HL_METRICS_PORT=9095
# HL_METRICS_TOKEN=your_secret_token
# HL_ALERT_WEBHOOK_URL=https://hooks.slack.com/...
HL_ALERT_WEBHOOK_TYPE=generic
HL_ALERT_ENABLED=true

# -----------------------------------------------------------------------------
# STATE & LOGGING
# -----------------------------------------------------------------------------
HL_STATE_DIR=state
HL_FILL_LOG_RETENTION_DAYS=7
HL_FILL_LOG_COMPACT_INTERVAL_SEC=3600
HL_RANDOM_SIZE_JITTER=0.02
HL_USE_CLOID=true
HL_LOG_ORDER_INTENT_SAMPLE=0.0
HL_LOG_STRATEGY_SAMPLE=0.0
HL_LOG_SUBMIT_SAMPLE=0.05
HL_REPRICE_TICK_THRESHOLD=3
HL_API_ERROR_THRESHOLD=5

# -----------------------------------------------------------------------------
# PERFORMANCE OPTIMIZATIONS
# -----------------------------------------------------------------------------
HL_MID_CACHE_TTL_MS=500
HL_FILL_LOG_BATCH_FLUSH_SEC=1.0
